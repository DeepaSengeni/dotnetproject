@model StudentAppWebsite.Models.ResetPassword

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="/content/css/bootstrap.min.css" rel="stylesheet" type="text/css">
<link href="/content/css/style.css" rel="stylesheet" type="text/css">
<link href="~/Plugin/mathscribe/jqmath-0.4.3.css" rel="stylesheet" />
<link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Plugin/mathscribe/jqmath-0.4.3.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.11.2.min.js"></script>
<script src="/Scripts/jquery.validate.min.js"></script>
<script src="/Scripts/jquery.validate.unobtrusive.min.js"></script>
<style>
    .panel-default > .panel-heading {
        color: #FFF !important;
        background-color: #004293 !important;
        border-color: #004293 !important;
        font-size: 18px;
    }

    .login-heading {
        font-size: 26px;
        font-weight: 600;
        text-align: center;
        padding: 20px 0px;
        color: #fff;
    }

    .panel-body {
        margin: 15px 15px;
    }

    .panel-title {
        color: #fff !important;
    }
</style>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
  

    
    <div style="min-height: 100px;">
        <div>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" style="text-align: center;">@TempData["ErrorMessage"]</div>

            }
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" style="text-align: center;">@TempData["SuccessMessage"]</div>

            }
        </div>
    </div>
    <div class="container">
        @*<div class="row">
                <div class="col-md-12">
                    <p class="login-heading"> <i class="fa fa-check-square-o" aria-hidden="true"></i>
 Reset Password</p>
                </div>
            </div>*@
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-check-square-o" aria-hidden="true"></i>  Reset Password</h3>
                    </div>
                    <div class="panel-body">
                        <div>
                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger" style="text-align: center;">@TempData["ErrorMessage"]</div>

                            }
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success" style="text-align: center;">@TempData["SuccessMessage"]</div>

                            }
                        </div>
                        <form role="form" name="login_form" method="POST" onsubmit="return validate();">
                           

                                <div class="form-group">
                                    @Html.HiddenFor(model => model.Guid)
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })

                                    <div class="text-danger">@Html.ValidationMessageFor(m => m.Password)</div>
                                </div>
                                <div class="form-group">

                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "ConfirmPassword" })

                                    <div class="text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</div>
                                </div>



                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Submit" />




                           
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
}
<script src="~/Content/js/bootstrap.min.js"></script>
