@model IEnumerable<StudentAppWebsite.Models.AdvertisementModels>
@{
    ViewBag.Title = "getpaymentDetails_ByadID";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Payment Detail</h3>
                <div class="panel-options">
                    <a href="#" data-toggle="panel">
                        <span class="collapse-icon">&ndash;</span>
                        <span class="expand-icon">+</span>
                    </a>
                    <a href="#" data-toggle="remove">
                        &times;
                    </a>
                </div>
            </div>
            <div class="panel-body">
              
                <div class="table-responsive">
                    <table class="table table-small-font table-bordered table-striped" style="text-align:center">                   
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><h4>User ID</h4></td>
                                    <td><h5>@item.PaypalResponseList[0].userId</h5></td>
                                </tr>
                                <tr>
                                    <td><h4>Payer ID</h4></td>
                                    <td><h5>@item.PaypalResponseList[0].Payer_id</h5></td>
                                </tr>
                                <tr>
                                    <td><h4>Payment ID</h4></td>
                                    <td><h5>@item.PaypalResponseList[0].paymentId</h5></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
