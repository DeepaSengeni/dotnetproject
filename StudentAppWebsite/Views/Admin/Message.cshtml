@model   StudentAppWebsite.Models.Messages

@{
    ViewBag.Title = "Message";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("Message", "Admin", FormMethod.Post))
{
    
    <div class="col-md-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Message</h3>

                    <div class="panel-options">
                        <a href="#" data-toggle="panel">
                            <span class="collapse-icon">&ndash;</span>
                            <span class="expand-icon">+</span>
                        </a>
                        <a href="#" data-toggle="remove">&times;
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="form-group clearfix">

                        <div class="col-sm-12">
                            @Html.HiddenFor(model => model.Id)
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", placeholder = "Message" })

                            <div class="text-danger">@Html.ValidationMessageFor(model => model.Message)</div>

                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <div class="col-sm-12" style="text-align: right">
                            <input type="submit" id="btnSubmit" value="Submit" class="btn btn-primary" />
                            <input type="button" id="CancelButton" class="btn btn-primary" value="Cancel" />

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">

    $('#CancelButton').click(function () {

        location.reload(true);

    });

</script>
