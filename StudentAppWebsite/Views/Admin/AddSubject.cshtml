@model StudentAppWebsite.Models.Subjects
@{
    ViewBag.Title = "AddSubject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-md-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
 </div>
@using (Html.BeginForm("AddSubject", "Admin", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Add New Subject
</h3>

                    <div class="panel-options">
                        <a href="#" data-toggle="panel">
                            <span class="collapse-icon">&ndash;</span>
                            <span class="expand-icon">+</span>
                        </a>
                        <a href="#" data-toggle="remove">&times;
                        </a>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-lg-6">
                        <div class="form-group clearfix">
                            <label class="control-label">Subject Stream</label>
                            
                                @Html.DropDownListFor(model => model.StreamId, (ViewBag.StreamList) as List<SelectListItem>, "Please select stream.", new { @Class = "form-control" })
                                <div class="text-danger">@Html.ValidationMessageFor(model => model.StreamId)</div>
                           
                        </div>
                    
                        <div class="form-group clearfix">
                            <label class="control-label" >Subject Name</label>
                            

                                @Html.TextBoxFor(model => model.SubjectName, new { @class = "form-control", placeholder = "Subject Name",maxlength="40" })

                                <div class="text-danger">@Html.ValidationMessageFor(model => model.SubjectName)</div>

                            
                        </div>
                         <div class="form-group clearfix">
                            <label class="col-sm-4 control-label">Status</label>
                            <div class="col-sm-8">
                                @Html.CheckBoxFor(model => model.Status)

                                @*  @Html.TextBoxFor(model => model.Status, new { @class = "form-control", placeholder = "Status" })*@
                            </div>
                        </div>
                        <div class="form-group clearfix">
                            
                                <input type="submit" value="Submit" class="btn btn-primary" />
                                <a href="/Admin/SubjectsList" class="btn btn-success">Back</a>
                          
                        </div>
                    
                    </div>
                       @*<div class="col-lg-6">
                        <div class="form-group clearfix">
                            <label class="control-label">Subject Details</label>
                           

                                @Html.TextAreaFor(model => model.Details, new { @class = "form-control", placeholder = "Subject Details" })

                                <div class="text-danger">@Html.ValidationMessageFor(model => model.Details)</div>

                            
                        </div>
                  
                        
                    </div>*@
                   
                     </div>
                </div>
            </div>
        </div>
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/jquery-1.7.1.min.js"></script>
