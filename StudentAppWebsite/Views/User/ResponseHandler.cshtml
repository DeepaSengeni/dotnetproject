@{
    ViewBag.Title = "ResponseHandler";
}
<style>
    .panel .panel-heading {
    margin-bottom:0px !important;}
</style>
<div class="container-fluid ">

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @*<h3 class="panel-title">ResponseHandler</h3>*@

                </div>
                <div class="panel-body">

                  <div class="col-md-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" id="errorMessage">@TempData["ErrorMessage"]</div>
            @Html.ActionLink("Try Again", "MakePayment", "User", new { AdId=ViewBag.AdId}, new { @class = "btn btn-success" })
            @Html.ActionLink("Cancel", "Home", "Home",new{}, new { @class = "btn btn-default" })
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" id="successMessage">@TempData["SuccessMessage"]</div>
            @Html.ActionLink("Go To Home Page", "Home", "Home",new{}, new { @class = "btn btn-success" })
        }
      
    </div>


                    
                </div>
            </div>
        </div>
    </div>
     </div>
